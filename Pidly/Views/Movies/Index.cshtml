@using System.Web.UI.WebControls
@model IEnumerable<Pidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@*The 0 is sent as the Id to the New Action and hence the View*@
@Html.ActionLink("Add New Movie", "New", "Movies", 0, new { @class = "btn btn-primary" })

<br/><br/>
<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Movie</th>
        <th>Genre</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@Html.ActionLink(movie.Name, "Details", new {id = movie.Id} )</td>
            <td>@movie.Genre.Name</td>
        </tr>
    }
    </tbody>
</table>